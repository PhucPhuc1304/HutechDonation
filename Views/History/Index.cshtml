@{
    ViewData["Title"] = "History Tranfer";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="card " style="border-radius: 1rem;">
                    <div class="card-body p-5">
                    @model List<BlockDetailsViewModel>

                    <center><h2>History</h2></center>
                    <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                <th scope="col"><center><h3>Index</h3></center></th>
                                <th scope="col"><center><h3>Data</h3></center></th>
                            </tr>
                            </thead>
                            <tbody>
                                @foreach (var block in Model)
                                {
                                <tr>
                                    <td class ="col-2"><strong>Block </strong>@block.Index</td>
                                    <td>
                                        <p>
                                            <strong>Số tài khoản người gửi: </strong>@block.Sender
                                        </p>
                                        <p>
                                            <strong>Số tiền ủng hộ: </strong>@block.Amount

                                        </p>
                                        <p>
                                            <strong>Ngày giao dịch: </strong>@block.TransactionDate

                                        </p>
                                        <p>
                                            <strong>Previous Hash: </strong>@block.PreviousHash

                                        </p>
                                        <p>
                                            <strong>Hash: </strong>@block.Hash
                                        </p>
                                    </td>



                                </tr>
                                  
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

</section>