<!-- Start project Area -->
<section class="project-area section-gap" id="project">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-md-8 pb-80 header-text">
				<h1>Các dự án đang cần giúp đỡ</h1>
				<p>
					Chúng tôi tự hào giới thiệu các dự án từ thiện mà chúng tôi đã triển khai để giúp đỡ những người cần thiết. Từ việc xây trường học, cung cấp nhu yếu phẩm cho người vô gia cư đến hỗ trợ giáo dục cho trẻ em. Hãy cùng nhau tạo ra những thay đổi tích cực trong cộng đồng.
				</p>
			</div>
		</div>
		<div class="row">
			@model Web_Donation.Models.DetailsPageViewModel

			@for (var i = 0; i < Model.Products2.Count; i++)
			{
				var product = Model.Products2[i];
				var totalAmount = i < Model.FilteredBlockViewModelList.Count ? Model.FilteredBlockViewModelList[i].TotalAmount : 0;

				<div class="col-lg-4 col-md-4 project-wrap">
					<div class="single-project">
						<div class="content">
							<a href="/Details/@product.Producid" target="_blank">
								<div class="content-overlay"></div>
								<img class="content-image img-fluid d-block mx-auto" src="@product.Images" alt="">
								<div class="content-details fadeIn-bottom">
									<a href="#donation" class="head-btn btn text-uppercase">Ủng hộ</a>
								</div>
							</a>
						</div>
					</div>
					<div class="details">
						<a href="/Details/@product.Producid"><h2>@product.Name</h2></a>
						<div style="margin-top: 10px; margin-bottom: 10px;">
							<h4 style="display: inline-block;">Mục tiêu:</h4>
							<h4 class="balance" style="display: inline-block; font-size: 20px">@string.Format("{0:N0} VND", product.Target)</h4>
							
						</div>
						<div style="margin-top: 10px; margin-bottom: 10px;">
							<h4 style="display: inline-block;">Đã ủng hộ:</h4>
							<h4 class="balance" style="display: inline-block; font-size: 20px">@string.Format("{0:N0} VND", totalAmount)</h4>
						</div>
						<p>@product.Description</p>
						<a class="text-uppercase" href="/Details/@product.Producid">read more</a>
					</div>
				</div>
			}

			</div>
</section>
<!-- End project Area -->
